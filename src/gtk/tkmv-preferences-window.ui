<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  <template class="TkmvPreferencesWindow" parent="AdwPreferencesWindow">
    <property name="default-width">640</property>
    <property name="default-height">480</property>
    <child>
      <object class="AdwPreferencesPage">
        <property name="icon_name">preferences-window-layout-symbolic</property>
        <property name="title">_General</property>
        <property name="use-underline">True</property>
        <child>
          <object class="AdwPreferencesGroup">
            <property name="description" translatable="yes">Configurable options for user interface:</property>
            <property name="title" translatable="yes">User Interface</property>
            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="yes">Mark error entries</property>
                <property name="activatable_widget">auto_mark_errors_switch</property>
                <child>
                  <object class="GtkSwitch" id="auto_mark_errors_switch">
                    <property name="valign">center</property>
                    <property name="state">True</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="yes">Mark warning entries</property>
                <property name="activatable_widget">auto_mark_warnings_switch</property>
                <child>
                  <object class="GtkSwitch" id="auto_mark_warnings_switch">
                    <property name="valign">center</property>
                    <property name="state">True</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>

